// credit: https://github.com/BrunoB81HK/ros2-workspace-devcontainer-template
{
  "name": "Weed Control Unit ROS 2 Workspace",
  "build": {
      "dockerfile": "../Dockerfile",
      "context": ".."
  },
  "customizations": {
      "vscode": {
          "extensions": [
              "ms-python.python",
              "charliermarsh.ruff",
              "ms-vscode.cpptools-extension-pack",
              "ms-iot.vscode-ros",
              "ms-azuretools.vscode-docker"
          ],
          "settings": {
              "files.associations": {
                  "*.rviz": "yaml"
              }
          }
      }
  },
  "workspaceFolder": "/home/ofa/ros2_ws",
  "workspaceMount": "source=${localWorkspaceFolder},target=/home/ofa/ros2_ws/src/ros-weed-control,type=bind",
  "mounts": [
    "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached"
  ],
  "containerEnv": {
    "DISPLAY": "${localEnv:DISPLAY}"
  }
}
